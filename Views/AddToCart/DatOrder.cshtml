@model System.Data.DataTable
@using System.Data
@{
    ViewBag.Title = "DatOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <
    <h2>The Orders</h2>
    <link rel="stylesheet" href="~/Content/css/DataOfOrder.css">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
</head>

<div>
    <header>
        <a href="#" class="CoffeShop">
            <img src="~/Content/css/image/coffeelogo.png" alt="">

            >
    </header>
    @if (Model != null)
    {
        <table border="1">
            <thead>
                <tr>
                    @foreach (System.Data.DataColumn col in Model.Columns)
                    {
                        <th>  @col.Caption  </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        @foreach (var cell in row.ItemArray)
                        {

                            if (cell != null)
                            {
                                <td>  @cell.ToString() </td>

                            }
                            else
                            {
                                <td></td>
                            }
                        }
                    </tr>

                }

            </tbody>
        </table>

    }


</div>
</html>
